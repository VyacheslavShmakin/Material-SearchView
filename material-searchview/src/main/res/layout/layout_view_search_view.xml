<RelativeLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:id="@+id/search_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/searchview_side_margins"
        android:layout_marginRight="@dimen/searchview_side_margins"
        android:layout_marginTop="@dimen/searchview_side_margins"
        android:background="@color/searchview_background"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/searchview_height_region_search"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibtn_navigation_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/searchview_image_back"
                android:paddingLeft="@dimen/searchview_padding_horizontal_button_action"
                android:paddingRight="@dimen/searchview_padding_horizontal_button_action"
                android:scaleType="fitCenter"
                android:src="@drawable/searchview_button_back"/>

            <ru.shmakinv.android.widget.material.searchview.SearchEditText
                android:id="@+id/et_search_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/searchview_text_hint"
                android:ellipsize="end"
                android:imeOptions="flagNoExtractUi|actionSearch"
                android:inputType="textAutoComplete|textAutoCorrect"
                android:maxLines="1"
                android:textColor="@color/searchview_text_query"
                android:textColorHighlight="@color/searchview_text_highlight"
                android:textCursorDrawable="@drawable/searchview_query_field_cursor"
                card_view:typeface="roboto_regular"/>

            <ImageButton
                android:id="@+id/ibtn_voice_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/searchview_voice_cancel"
                android:paddingLeft="@dimen/searchview_padding_horizontal_button_action"
                android:paddingRight="@dimen/searchview_padding_horizontal_button_action"
                android:scaleType="fitCenter"
                android:src="@drawable/searchview_button_voice"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
